
{% extends 'base.html.twig' %}

{% block body %}
<style>
    .container { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>
<div class="container">
	<h1>Login</h1>
	<form action="{{ path('app_login') }}" method="post">
		{% if error %}
		<span>
			{{ error.messageKey|trans(error.messageData, 'security') }}
		</span>
		{% endif %}
		<div>
			<input type="email" name="_username" value="{{ last_username }}" placeholder="Email">
		</div>
		<div>
			<input type="password" name="_password" placeholder="Contraseña">
		</div>
		<div>
			<input type="hidden" name="_target_path" value="{{ path('app_image') }}">
			<button type="submit" name="button">Login</button>
		</div>
	</form>
	<div>
		¿No tienes cuenta? <a href="{{path('app_user_registration')}}">Regístrate</a>
	</div>
</div>
{% endblock %}
