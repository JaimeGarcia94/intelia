{% extends 'base.html.twig' %}

{% block body %}
<style>
    .container { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>
<div class="container">
    <h1>Registrate</h1>
    <form action="{{ path('save_registration') }}" method="post">
        {% if msg %}
            <span class="" style="font-size:13px">
            {{ msg }}
            </span>
        {% endif %}
        <div>
            <input type="email" id="email" name="_username" placeholder="Email" required>
        </div>
        <div>
            <input type="password" name="_password" placeholder="Contraseña" required="required">
        </div>
        
        <div>
            <button type="submit" name="button">Regístrate</button>
        </div>
        <div>
            <a href="{{ path('backLogin') }}" type="button" name="button">Volver</a>
        </div>
    </form>
</div>
{% endblock %}